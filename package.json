{
	"name": "bullcheck",
	"private": true,
	"version": "0.0.1",
	"packageManager": "pnpm@10.23.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "node scripts/postbuild.js",
		"deploy": "pnpm run build && wrangler deploy",
		"preview": "wrangler dev .svelte-kit/cloudflare/_worker.js --port 4173",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"typecheck": "pnpm run check",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:unit": "vitest --run --project client --project server",
		"test:workers": "WRANGLER_LOG=error vitest --run --project workers",
		"test:e2e": "playwright test",
		"test:ci": "pnpm test:unit && pnpm test:workers && pnpm test:e2e",
		"test": "pnpm test:unit",
		"gen": "wrangler types",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.12.10",
		"@cloudflare/workers-types": "^4.20260205.0",
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@testing-library/user-event": "^14.6.1",
		"@vitest/runner": "^3.2.4",
		"@vitest/snapshot": "^3.2.4",
		"@types/node": "^22",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.1.0",
		"jsdom": "^28.0.0",
		"miniflare": "^4.20260205.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1",
		"vitest": "^3.2.0",
		"wrangler": "^4.60.0"
	},
	"dependencies": {
		"@cloudflare/agents": "^0.0.16",
		"@cloudflare/ai": "^1.2.2",
		"base64-js": "^1.5.1",
		"better-auth": "^1.4.18",
		"mustache": "^4.2.0"
	},
	"pnpm": {
		"overrides": {
			"drizzle-orm": "^0.45.1"
		}
	}
}